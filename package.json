{
  "name": "@player.js/core",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "components/player/index.js",
  "scripts": {
    "build": "preact build --sw=false --no-prerender",
    "dist:static": "microbundle --name=player.js -css=inline --entry src/components/module.js -o dist/static/player.js.js --alias react=preact/compat --jsx React.createElement",
    "dist": "microbundle --entry src/components/module.js --jsx React.createElement",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/node": "^7.10.5",
    "babel-preset-preact": "^2.0.0",
    "dashjs": "^4.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "hls.js": "^1.1.2",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lottie-react": "^2.1.0",
    "microbundle": "^0.14.2",
    "preact": "^10.3.2",
    "preact-cli": "^3.0.0"
  },
  "dependencies": {},
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
